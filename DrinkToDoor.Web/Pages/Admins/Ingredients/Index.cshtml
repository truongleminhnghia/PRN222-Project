@page
@using DrinkToDoor.Data.enums
@model DrinkToDoor.Web.Pages.Admins.Ingredients.IndexModel
@{
  ViewData["Title"] = "Nguyên Liệu";
  Layout = "_LayoutAdmin";
}

@section Styles {
  <style>
    /* Font & spacing utils */
    .text-14 {
      font-size: 14px;
      line-height: 1.5;
    }

    .text-16 {
      font-size: 16px;
      line-height: 1.5;
    }

    .text-20 {
      font-size: 20px;
      line-height: 1.4;
      font-weight: 600;
    }

    .py-5 {
      padding: 3rem 0;
    }

    .mb-4 {
      margin-bottom: 1.5rem;
    }

    .me-1 {
      margin-right: .25rem;
    }

    .table-hover tbody tr:hover {
      background-color: rgba(0, 123, 255, .05);
    }

    .pagination-sm .page-link {
      padding: .25rem .5rem;
      font-size: .875rem;
    }
  </style>
}

<div class="container-xxxl py-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-20 fw-bold text-primary">@ViewData["Title"]</h1>
    <a asp-page="Create" class="btn btn-success btn-sm text-16">
      <i class="bi bi-plus-lg me-1"></i> Tạo Nguyên Liệu Mới
    </a>
  </div>

  <!-- Filter -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <form method="get" class="row gx-3 gy-2 align-items-end">
        <div class="col-sm-6 col-md-3">
          <label asp-for="IngredientParams.Name" class="form-label text-14">Mã hoặc Tên</label>
          <input asp-for="IngredientParams.Name" class="form-control text-14" placeholder="Nhập mã hoặc tên..." />
          <span asp-validation-for="IngredientParams.Name" class="text-danger small"></span>
        </div>
        <div class="col-sm-6 col-md-3">
          <label asp-for="IngredientParams.MinPrice" class="form-label text-14">Min Price</label>
          <input asp-for="IngredientParams.MinPrice" class="form-control text-14" placeholder="Nhập mã hoặc tên..." />
          <span asp-validation-for="IngredientParams.MinPrice" class="text-danger small"></span>
        </div>
        <div class="col-sm-6 col-md-3">
          <label asp-for="IngredientParams.MaxPrice" class="form-label text-14">Max Price</label>
          <input asp-for="IngredientParams.MaxPrice" class="form-control text-14" placeholder="Nhập mã hoặc tên..." />
          <span asp-validation-for="IngredientParams.MinPrice" class="text-danger small"></span>
        </div>
        <div class="col-sm-6 col-md-3">
          <label asp-for="IngredientParams.MinStockQty" class="form-label text-14">Min Quantity</label>
          <input asp-for="IngredientParams.MinStockQty" class="form-control text-14"
            placeholder="Nhập mã hoặc tên..." />
          <span asp-validation-for="IngredientParams.MinStockQty" class="text-danger small"></span>
        </div>
        <div class="col-sm-6 col-md-3">
          <label asp-for="IngredientParams.MaxStockQty" class="form-label text-14">Max Quantity</label>
          <input asp-for="IngredientParams.MaxStockQty" class="form-control text-14"
            placeholder="Nhập mã hoặc tên..." />
          <span asp-validation-for="IngredientParams.MaxStockQty" class="text-danger small"></span>
        </div>
        <div class="col-sm-6 col-md-3">
          <label asp-for="CategoryId" class="form-label text-14">Loại</label>
          <select asp-for="CategoryId" class="form-select text-14" asp-items="@Model.CategoryList">
            <option value="">— Tất cả —</option>
          </select>
        </div>
        <div class="col-sm-6 col-md-3">
          <label class="form-label text-14">Trạng thái</label>
          <select asp-for="IngredientParams.Status" class="form-select text-14"
            asp-items="Html.GetEnumSelectList<EnumStatus>()">
            <option value="">— Tất cả —</option>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary text-14">
            <i class="bi bi-funnel-fill me-1"></i> Lọc
          </button>
          <a asp-page="Index" class="btn btn-outline-secondary text-14 ms-2">
            <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
          </a>
        </div>
      </form>
    </div>
  </div>

  <!-- Table -->
  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr class="text-14">
            <th class="text-center" style="width:5%">STT</th>
            <th class="text-center" style="width:10%">Code</th>
            <th class="text-start" style="width:25%">Tên</th>
            <th class="text-center" style="width:10%">Trạng thái</th>
            <th class="text-end" style="width:10%">Giá</th>
            <th class="text-center" style="width:10%">Số lượng</th>
            <th class="text-start" style="width:15%">Loại</th>
            <th class="text-center" style="width:10%">Hành động</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.IngredientResponses.Select((u, idx) => new { u, idx }))
          {
            <tr class="text-14">
              <td class="text-center">@((Model.PageCurrent - 1) * Model.PageSize + item.idx + 1)</td>
              <td class="text-center link-primary">@item.u.Code</td>
              <td>@item.u.Name</td>
              <td class="text-center">
                @{
                  var badge = item.u.Status == EnumStatus.ACTIVE ? "bg-success" : "bg-danger";
                }
                <span class="badge @badge">@item.u.Status</span>
              </td>
              <td class="text-end">@item.u.Price VNĐ</td>
              <td class="text-center">@item.u.StockQty</td>
              <td>@item.u.Category?.Name</td>
              <td class="text-center">
                <div class="btn-group btn-group-sm" role="group">
                  <a asp-page="Edit" asp-route-id="@item.u.Id" class="btn btn-warning text-white me-1">Sửa</a>
                  <a asp-page="Detail" asp-route-id="@item.u.Id" class="btn btn-info text-white me-1">Xem</a>
                  <!-- Trigger delete modal -->
                  <button type="button" class="btn btn-danger text-white" data-bs-toggle="modal"
                    data-bs-target="#deleteIngredientModal" data-id="@item.u.Id" data-name="@item.u.Name">
                    Xóa
                  </button>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
    <!-- Pagination -->
    <div class="card-footer bg-white">
      <nav aria-label="Trang">
        <ul class="pagination pagination-sm mb-0 justify-content-start">
          <li class="page-item @(Model.PageCurrent == 1 ? "disabled" : "")">
            <a class="page-link" asp-route-PageCurrent="@(Model.PageCurrent - 1)"
              asp-route-PageSize="@Model.PageSize">&lsaquo;</a>
          </li>
          @for (int i = 1; i <= Model.TotalPages; i++)
          {
            <li class="page-item @(i == Model.PageCurrent ? "active" : "")">
              <a class="page-link" asp-route-PageCurrent="@i" asp-route-PageSize="@Model.PageSize">@i</a>
            </li>
          }
          <li class="page-item @(Model.PageCurrent == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-route-PageCurrent="@(Model.PageCurrent + 1)"
              asp-route-PageSize="@Model.PageSize">&rsaquo;</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteIngredientModal" tabindex="-1" aria-labelledby="deleteIngredientModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteIngredientModalLabel">Xóa nguyên liệu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body text-14">
        <form id="deleteIngredientForm" method="post">
          @Html.AntiForgeryToken()
          <div class="mb-3">
            <label class="form-label">Nhập <strong id="deleteModalName"></strong></label>
            <input type="text" class="form-control" id="deleteModalInput" placeholder="Nhập chính xác tên để xác nhận">
            <div class="text-danger mt-1" id="deleteError"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    var deleteModal = document.getElementById('deleteIngredientModal');
    var deleteModalName = deleteModal.querySelector('#deleteModalName');
    var deleteModalInput = deleteModal.querySelector('#deleteModalInput');
    var confirmDeleteBtn = deleteModal.querySelector('#confirmDeleteBtn');
    var deleteError = deleteModal.querySelector('#deleteError');
    var deleteForm = deleteModal.querySelector('#deleteIngredientForm');

    deleteModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var id = button.getAttribute('data-id');
      var name = button.getAttribute('data-name');
      deleteModalName.textContent = '"' + name + '"';
      deleteModalInput.value = '';
      deleteError.textContent = '';
      confirmDeleteBtn.setAttribute('data-id', id);
    });

    confirmDeleteBtn.addEventListener('click', function () {
      var expected = deleteModalName.textContent.replace(/\"/g, '');
      if (deleteModalInput.value.trim() !== expected) {
        deleteError.textContent = 'Tên nguyên liệu không khớp.';
        return;
      }
      var id = this.getAttribute('data-id');
      deleteForm.setAttribute('action', '?handler=Delete&id=' + id);
      deleteForm.submit();
    });
  </script>
}
