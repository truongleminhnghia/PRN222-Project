@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DrinkToDoor.Data.enums
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@model DrinkToDoor.Web.Pages.Admins.Ingredients.Create
@{
    ViewData["Title"] = "Tạo sản phẩm mới";
    Layout = "_LayoutAdmin";
}

<h2 class="mb-4 text-primary fw-bold">@ViewData["Title"]</h2>

<div class="container-xxxl pb-5">
    <form method="post" enctype="multipart/form-data" class="needs-validation">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm p-4 rounded-4 bg-white">
            <div class="row g-4">

                <!-- Thông tin cơ bản -->
                <div class="col-md-6">
                    <label asp-for="IngredientRequest.Name" class="form-label fw-semibold">Tên nguyên liệu</label>
                    <input asp-for="IngredientRequest.Name" class="form-control"
                        placeholder="Nhập tên nguyên liệu..." />
                    <span asp-validation-for="IngredientRequest.Name" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="IngredientRequest.Price" class="form-label fw-semibold">Giá bán</label>
                    <input asp-for="IngredientRequest.Price" class="form-control" placeholder="VD: 100000" />
                    <span asp-validation-for="IngredientRequest.Price" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="IngredientRequest.Cost" class="form-label fw-semibold">Giá nhập</label>
                    <input asp-for="IngredientRequest.Cost" class="form-control" />
                    <span asp-validation-for="IngredientRequest.Cost" class="text-danger"></span>
                </div>

                <!-- Danh mục, thương hiệu -->
                <div class="col-md-4">
                    <label asp-for="IngredientRequest.CategoryId" class="form-label fw-semibold">Danh mục</label>
                    <select asp-for="IngredientRequest.CategoryId" class="form-select" asp-items="Model.Categories">
                        <option value="">— Chọn Danh Mục —</option>
                    </select>
                    <span asp-validation-for="IngredientRequest.CategoryId" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="IngredientRequest.Trademark" class="form-label fw-semibold">Thương hiệu</label>
                    <input asp-for="IngredientRequest.Trademark" class="form-control" />
                    <span asp-validation-for="IngredientRequest.Trademark" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="IngredientRequest.Origin" class="form-label fw-semibold">Xuất xứ</label>
                    <input asp-for="IngredientRequest.Origin" class="form-control" />
                    <span asp-validation-for="IngredientRequest.Origin" class="text-danger"></span>
                </div>

                <!-- Gói đóng gói -->
                <div class="col-md-3">
                    <label asp-for="PackagingOptionRequest.Label" class="form-label fw-semibold">Tên gói</label>
                    <input asp-for="PackagingOptionRequest.Label" class="form-control" />
                    <span asp-validation-for="PackagingOptionRequest.Label" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="PackagingOptionRequest.StockQty" class="form-label fw-semibold">Số lượng</label>
                    <input asp-for="PackagingOptionRequest.StockQty" class="form-control" />
                    <span asp-validation-for="PackagingOptionRequest.StockQty" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="PackagingOptionRequest.Unit" class="form-label fw-semibold">Đơn vị</label>
                    <input asp-for="PackagingOptionRequest.Unit" class="form-control" />
                    <span asp-validation-for="PackagingOptionRequest.Unit" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="PackagingOptionRequest.Type" class="form-label fw-semibold">Loại</label>
                    <select asp-for="PackagingOptionRequest.Type" class="form-select">
                        <option value="">-- Chọn loại --</option>
                        @foreach (EnumPackageType g in Enum.GetValues(typeof(EnumPackageType)))
                        {
                            <option value="@g" selected="@(g == Model.PackagingOptionRequest.Type ? "selected" : null)">
                                @GetDisplayName(g)</option>
                        }
                    </select>
                    <span asp-validation-for="PackagingOptionRequest.Type" class="text-danger"></span>
                </div>

                <!-- Mô tả và hình ảnh -->
                <div class="col-md-6">
                    <label asp-for="IngredientRequest.Description" class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="IngredientRequest.Description" rows="4" class="form-control"
                        placeholder="Mô tả chi tiết..."></textarea>
                    <span asp-validation-for="IngredientRequest.Description" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Hình ảnh</label>
                    <div id="imagePreview" class="d-flex flex-wrap gap-2 border rounded p-2">
                        <label for="imageInput" id="uploadTile"
                            class="card border-dashed d-flex align-items-center justify-content-center rounded"
                            style="width:120px;height:120px;cursor:pointer;">
                            <span class="fs-4 text-muted">+ Upload</span>
                        </label>
                    </div>
                    <input name="ImagesRequest" id="imageInput" type="file" class="d-none" multiple accept="image/*" />
                    <span asp-validation-for="ImagesRequest" class="text-danger"></span>
                </div>

                <!-- Nút -->
                <div class="col-12 mt-3 text-end">
                    <button type="submit" class="btn btn-primary px-4 rounded-pill">Tạo mới</button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 ms-2 rounded-pill">Hủy</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const imageInput = document.getElementById('imageInput');
        const preview = document.getElementById('imagePreview');
        const uploadTile = document.getElementById('uploadTile');

        // Global list to store selected files
        let selectedFiles = [];

        uploadTile.addEventListener('click', (e) => {
            e.preventDefault();
            imageInput.click();
        });

        imageInput.addEventListener('change', function () {
            Array.from(this.files).forEach(file => {
                // Avoid duplicates
                if (!selectedFiles.some(f => f.name === file.name && f.lastModified === file.lastModified)) {
                    selectedFiles.push(file);

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const wrapper = document.createElement('div');
                        wrapper.className = 'card position-relative rounded';
                        wrapper.style.width = '120px';
                        wrapper.style.height = '120px';

                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.style.objectFit = 'cover';
                        img.style.width = '100%';
                        img.style.height = '100%';
                        wrapper.appendChild(img);

                        const delIcon = document.createElement('i');
                        delIcon.className = 'bi bi-x-lg position-absolute';
                        delIcon.style.top = '4px';
                        delIcon.style.right = '4px';
                        delIcon.style.color = 'red';
                        delIcon.style.fontSize = '1.2rem';
                        delIcon.style.cursor = 'pointer';
                        delIcon.addEventListener('click', () => {
                            const index = preview.children.length - 2; // -2 to skip +Upload
                            selectedFiles.splice(index, 1);
                            wrapper.remove();
                            updateInputFiles();
                        });

                        wrapper.appendChild(delIcon);
                        preview.insertBefore(wrapper, uploadTile);
                    };
                    reader.readAsDataURL(file);
                }
            });

            updateInputFiles();
            this.value = ''; // reset so next change triggers
        });

        function updateInputFiles() {
            const dataTransfer = new DataTransfer();
            selectedFiles.forEach(file => dataTransfer.items.add(file));
            imageInput.files = dataTransfer.files;
        }
    </script>

}

@functions {
    private string GetDisplayName(Enum value)
    {
        var member = value.GetType().GetMember(value.ToString()).FirstOrDefault();
        if (member != null)
        {
            var attr = member.GetCustomAttribute<DisplayAttribute>();
            if (attr != null)
            {
                return attr.GetName();
            }
        }
        return value.ToString();
    }
}
