<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DrinkToDoor.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrinkToDoor.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <partial name="~/Pages/Shared/Partials/_HeaderPartials.cshtml" />
    <main class="flex-fill" style="margin-bottom: 0 !important;">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <partial name="~/Pages/Shared/Partials/_FooterPartials.cshtml" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>