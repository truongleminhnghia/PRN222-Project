@page
@model DrinkToDoor.Web.Pages.Carts.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<h1>@ViewData["Title"]</h1>

@if (Model.CartItemResponses?.Any() ?? false)
{
    <form method="post">
        <table class="table align-middle" id="cartTable">
            <thead class="table-light">
                <tr>
                    <th>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkAll">
                            <label class="form-check-label" for="checkAll">Chọn tất cả</label>
                        </div>
                    </th>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Tổng tiền</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItemResponses)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="SelectedIds" value="@item.Id" class="form-check-input cart-checkbox"
                                data-price="@item.IngredientProduct.Price" data-quantity="@item.Quantity" />
                        </td>
                        <td>
                            <img src="@item.IngredientProduct.Ingredient.Images.FirstOrDefault()?.Url"
                                style="width:100px;height:100px;object-fit:cover;" alt="@item.IngredientProduct.Name" />
                            <strong style="font-size:16px;color:#000;margin-left:8px;">
                                @item.IngredientProduct.Name
                            </strong>
                        </td>
                        <td>@item.IngredientProduct.Price.ToString("C0")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity* item.IngredientProduct.Price).ToString("C0")</td>
                        <td>
                            <button type="submit" class="btn btn-sm btn-danger" asp-page-handler="Remove"
                                asp-route-id="@item.Id">
                                Xóa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="position-sticky" style="bottom:0; z-index:1020;">
            <div class="bg-white border-top py-2">
                <div class="container d-flex align-items-center">
                    <div class="form-check me-3">
                        <input id="checkAll" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" for="checkAll">
                            Chọn tất cả (@Model.CartItemResponses.Count())
                        </label>
                    </div>

                    @* <button type="submit" asp-page-handler="ProcessSelection" class="btn btn-link me-auto">
                        <i class="bi bi-heart"></i> Lưu vào Đã thích
                    </button> *@

                    <div class="me-4">
                        <span id="selectedCount">0 sản phẩm</span> |
                        <span id="selectedTotal">0 VNĐ</span>
                    </div>

                    <button type="submit" asp-page-handler="Buy" class="btn btn-danger px-4">
                        Mua hàng
                    </button>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-info">Giỏ hàng của bạn đang trống.</div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const checkAlls = document.querySelectorAll('#checkAll');
            const items = document.querySelectorAll('.cart-checkbox');
            const countEl = document.getElementById('selectedCount');
            const totalEl = document.getElementById('selectedTotal');

            function updateSummary() {
                const checked = Array.from(items).filter(i => i.checked);
                const sum = checked.reduce((s, i) =>
                    s + parseFloat(i.dataset.price) * parseInt(i.dataset.quantity), 0
                );
                countEl.textContent = `${checked.length} sản phẩm`;
                totalEl.textContent = `${sum.toLocaleString('vi-VN')} VNĐ`;
                checkAlls.forEach(ca => ca.checked = checked.length === items.length);
            }

            checkAlls.forEach(ca => {
                ca.addEventListener('change', () => {
                    items.forEach(i => i.checked = ca.checked);
                    updateSummary();
                });
            });

            items.forEach(i => i.addEventListener('change', updateSummary));

            updateSummary();
        });
    </script>
}
